<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- 기본 설정 -->
    <property name="LOG_DIR" value="./logs"/>
    <property name="APP_NAME" value="ict05_final"/>
    <property name="PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] [%X{traceId}] %logger{36} - %msg%n"/>

    <!-- 콘솔 (개발용에선 콘솔만 쓰도록 프로파일로 분리 가능) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>${PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- 전체 로그 (일+용량 롤링) -->
    <appender name="FILE_ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${APP_NAME}.log</file>

        <encoder>
            <charset>UTF-8</charset>
            <pattern>${PATTERN}</pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/${APP_NAME}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
            <maxFileSize>200MB</maxFileSize>
        </rollingPolicy>
    </appender>

    <!-- ERROR 전용 파일 (ERROR 레벨만 수집) -->
    <appender name="FILE_ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${APP_NAME}-error.log</file>

        <!-- LevelFilter: ERROR만 ACCEPT -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>

        <encoder>
            <charset>UTF-8</charset>
            <pattern>${PATTERN}</pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/${APP_NAME}-error.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxHistory>60</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
            <maxFileSize>50MB</maxFileSize>
        </rollingPolicy>
    </appender>

    <!-- 비동기: 파일 쓰기 성능 개선 -->
    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>8192</queueSize>
        <!-- 필요 시 discardingThreshold, neverBlock 등 조정 -->
        <appender-ref ref="FILE_ROLLING"/>
    </appender>

    <appender name="ASYNC_ERROR" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>4096</queueSize>
        <appender-ref ref="FILE_ERROR"/>
    </appender>

    <!-- 기본 root 설정: 콘솔 + 비동기 파일 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
<!--        <appender-ref ref="ASYNC_FILE"/>-->
<!--        <appender-ref ref="ASYNC_ERROR"/>-->
    </root>

    <!-- 필요하면 패키지별 레벨 오버라이드 -->
    <logger name="com.boot.ict05_final_admin" level="DEBUG"/>
    <logger name="org.springframework" level="INFO"/>

    <!-- 예: dev 프로파일은 콘솔만 사용 -->
    <springProfile name="dev">
        <root level="DEBUG">
            <appender-ref ref="CONSOLE"/>
<!--            <appender-ref ref="ASYNC_FILE"/>-->
<!--            <appender-ref ref="ASYNC_ERROR"/>-->
        </root>
    </springProfile>

    <!-- 예: prod 프로파일은 파일(비동기)만 사용, 콘솔 제거 가능 -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="ASYNC_FILE"/>
            <appender-ref ref="ASYNC_ERROR"/>
        </root>
    </springProfile>

</configuration>
